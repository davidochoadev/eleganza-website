---
const address = "Via Appia Nuova 258, Roma, Lazio, Italia";
const phone = "+39 376 205 9729";
const phoneLink = "tel:+393762059729";
const whatsappLink = "https://wa.me/393762059729?text=Ciao%20Eleganza%2C%20vorrei%20prenotare%20un%20consulto";
const hours = "Lun–Sab, 10:00–19:00";
const mapsLink = "https://maps.google.com/?q=Via%20Appia%20Nuova%20258%2C%20Roma";
const instagramLink = "https://www.instagram.com/eleganza_bellezza_e_benessere?igsh=MXV4b2FleDdpc3J2OA==";
const facebookLink = "https://www.facebook.com/share/17x5bbTDS8/";
---

<section id="contatti" class="relative overflow-hidden bg-[#f9f3ec]">
  <div class="absolute inset-0" aria-hidden="true">
    <div class="absolute left-6 top-16 h-40 w-40 rounded-full bg-[radial-gradient(circle_at_30%_30%,#f1dbd2,transparent_65%)] blur-2xl"></div>
    <div class="absolute right-8 bottom-12 h-52 w-52 rounded-full bg-[radial-gradient(circle_at_70%_30%,#e8cfc8,transparent_65%)] blur-3xl"></div>
  </div>

  <div class="relative mx-auto max-w-6xl px-5 py-16 sm:px-6 sm:py-20 md:py-24">
    <div class="grid gap-10 md:grid-cols-[1.05fr_0.95fr]">
      <div>
        <div class="inline-flex items-center gap-2 rounded-full border border-[#e1c7bf] bg-white/60 px-3 py-1.5 text-[0.58rem] uppercase tracking-[0.22em] text-[#3b2f2f] sm:px-4 sm:text-[0.62rem] sm:tracking-[0.26em]">
          <span class="h-2 w-2 rounded-full bg-[#b88b84]"></span>
          Mappa & contatti
        </div>
        <h2 class="mt-4 text-balance font-['Cormorant Garamond', serif] text-2xl font-semibold leading-[1.15] text-[#2b2322] sm:text-3xl sm:leading-[1.1] md:text-4xl">
          Vieni a trovarci nel cuore di Roma.
        </h2>
        <p class="mt-4 max-w-xl text-pretty text-[0.95rem] text-[#4a3d3b] sm:text-base md:text-lg">
          Siamo facilmente raggiungibili. Ti aspettiamo per una consulenza dedicata in un ambiente accogliente e riservato.
        </p>

        <div class="mt-6 grid gap-4 sm:mt-8 sm:grid-cols-2">
          <div class="rounded-2xl border border-[#e1c7bf] bg-white/70 px-4 py-4">
            <p class="text-xs uppercase tracking-[0.2em] text-[#8c5c56]">Indirizzo</p>
            <p class="mt-1 font-semibold text-[#2b2322]">{address}</p>
          </div>
          <div class="rounded-2xl border border-[#e1c7bf] bg-white/70 px-4 py-4">
            <p class="text-xs uppercase tracking-[0.2em] text-[#8c5c56]">Orari</p>
            <p class="mt-1 font-semibold text-[#2b2322]">{hours}</p>
          </div>
          <div class="rounded-2xl border border-[#e1c7bf] bg-white/70 px-4 py-4">
            <p class="text-xs uppercase tracking-[0.2em] text-[#8c5c56]">Telefono</p>
            <a href={phoneLink} class="mt-1 inline-flex items-center gap-2 font-semibold text-[#2b2322] hover:text-[#8c5c56]">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="h-4 w-4" viewBox="0 0 16 16" aria-hidden="true">
                <path d="M3.654 1.328a.678.678 0 0 0-1.015-.063L1.605 2.3c-.483.484-.661 1.169-.45 1.77a17.6 17.6 0 0 0 4.168 6.608 17.6 17.6 0 0 0 6.608 4.168c.601.211 1.286.033 1.77-.45l1.034-1.034a.678.678 0 0 0-.063-1.015l-2.307-1.794a.68.68 0 0 0-.58-.122l-2.19.547a1.75 1.75 0 0 1-1.657-.459L5.482 8.062a1.75 1.75 0 0 1-.46-1.657l.548-2.19a.68.68 0 0 0-.122-.58zM1.884.511a1.745 1.745 0 0 1 2.612.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.68.68 0 0 0 .178.643l2.457 2.457a.68.68 0 0 0 .644.178l2.189-.547a1.75 1.75 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.6 18.6 0 0 1-7.01-4.42 18.6 18.6 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877z"/>
              </svg>
              {phone}
            </a>
          </div>
          <div class="rounded-2xl border border-[#e1c7bf] bg-white/70 px-4 py-4">
            <p class="text-xs uppercase tracking-[0.2em] text-[#8c5c56]">WhatsApp</p>
            <a href={whatsappLink} class="mt-1 inline-flex items-center gap-2 font-semibold text-[#2b2322] hover:text-[#8c5c56]">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="h-4 w-4" viewBox="0 0 16 16" aria-hidden="true">
                <path d="M13.601 2.326A7.85 7.85 0 0 0 7.994 0C3.627 0 .068 3.558.064 7.926c0 1.399.366 2.76 1.057 3.965L0 16l4.204-1.102a7.9 7.9 0 0 0 3.79.965h.004c4.368 0 7.926-3.558 7.93-7.93A7.9 7.9 0 0 0 13.6 2.326zM7.994 14.521a6.6 6.6 0 0 1-3.356-.92l-.24-.144-2.494.654.666-2.433-.156-.251a6.56 6.56 0 0 1-1.007-3.505c0-3.626 2.957-6.584 6.591-6.584a6.56 6.56 0 0 1 4.66 1.931 6.56 6.56 0 0 1 1.928 4.66c-.004 3.639-2.961 6.592-6.592 6.592m3.615-4.934c-.197-.099-1.17-.578-1.353-.646-.182-.065-.315-.099-.445.099-.133.197-.513.646-.627.775-.114.133-.232.148-.43.05-.197-.1-.836-.308-1.592-.985-.59-.525-.985-1.175-1.103-1.372-.114-.198-.011-.304.088-.403.087-.088.197-.232.296-.346.1-.114.133-.198.198-.33.065-.134.034-.248-.015-.347-.05-.099-.445-1.076-.612-1.47-.16-.389-.323-.335-.445-.34-.114-.007-.247-.007-.38-.007a.73.73 0 0 0-.529.247c-.182.198-.691.677-.691 1.654s.71 1.916.81 2.049c.098.133 1.394 2.132 3.383 2.992.47.205.84.326 1.129.418.475.152.904.129 1.246.08.38-.058 1.171-.48 1.338-.943.164-.464.164-.86.114-.943-.049-.084-.182-.133-.38-.232"/>
              </svg>
              Scrivici ora
            </a>
          </div>
          <div class="rounded-2xl border border-[#e1c7bf] bg-white/70 px-4 py-4 sm:col-span-2">
            <p class="text-xs uppercase tracking-[0.2em] text-[#8c5c56]">Seguici</p>
            <div class="mt-2 flex flex-wrap gap-3">
              <a
                href={instagramLink}
                class="inline-flex items-center gap-2 rounded-full border border-[#2b2322] px-4 py-2 text-[0.65rem] font-semibold uppercase tracking-[0.18em] text-[#2b2322] transition hover:bg-[#2b2322] hover:text-[#f9f3ec]"
              >
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="h-4 w-4" viewBox="0 0 16 16" aria-hidden="true">
                  <path d="M8 0C5.829 0 5.556.01 4.703.048 3.85.088 3.269.222 2.76.42a3.9 3.9 0 0 0-1.417.923A3.9 3.9 0 0 0 .42 2.76C.222 3.268.087 3.85.048 4.7.01 5.555 0 5.827 0 8.001c0 2.172.01 2.444.048 3.297.04.852.174 1.433.372 1.942.205.526.478.972.923 1.417.444.445.89.719 1.416.923.51.198 1.09.333 1.942.372C5.555 15.99 5.827 16 8 16s2.444-.01 3.298-.048c.851-.04 1.434-.174 1.943-.372a3.9 3.9 0 0 0 1.416-.923c.445-.445.718-.891.923-1.417.197-.509.332-1.09.372-1.942C15.99 10.445 16 10.173 16 8s-.01-2.445-.048-3.299c-.04-.851-.175-1.433-.372-1.941a3.9 3.9 0 0 0-.923-1.417A3.9 3.9 0 0 0 13.24.42c-.51-.198-1.092-.333-1.943-.372C10.443.01 10.172 0 7.998 0zm-.717 1.442h.718c2.136 0 2.389.007 3.232.046.78.035 1.204.166 1.486.275.373.145.64.319.92.599s.453.546.598.92c.11.281.24.705.275 1.485.039.843.047 1.096.047 3.231s-.008 2.389-.047 3.232c-.035.78-.166 1.203-.275 1.485a2.5 2.5 0 0 1-.599.919c-.28.28-.546.453-.92.598-.28.11-.704.24-1.485.276-.843.038-1.096.047-3.232.047s-2.39-.009-3.233-.047c-.78-.036-1.203-.166-1.485-.276a2.5 2.5 0 0 1-.92-.598 2.5 2.5 0 0 1-.6-.92c-.109-.281-.24-.705-.275-1.485-.038-.843-.046-1.096-.046-3.233s.008-2.388.046-3.231c.036-.78.166-1.204.276-1.486.145-.373.319-.64.599-.92s.546-.453.92-.598c.282-.11.705-.24 1.485-.276.738-.034 1.024-.044 2.515-.045zm4.988 1.328a.96.96 0 1 0 0 1.92.96.96 0 0 0 0-1.92m-4.27 1.122a4.109 4.109 0 1 0 0 8.217 4.109 4.109 0 0 0 0-8.217m0 1.441a2.667 2.667 0 1 1 0 5.334 2.667 2.667 0 0 1 0-5.334"/>
                </svg>
                Instagram
              </a>
              <a
                href={facebookLink}
                class="inline-flex items-center gap-2 rounded-full border border-[#2b2322] px-4 py-2 text-[0.65rem] font-semibold uppercase tracking-[0.18em] text-[#2b2322] transition hover:bg-[#2b2322] hover:text-[#f9f3ec]"
              >
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="h-4 w-4" viewBox="0 0 16 16" aria-hidden="true">
                  <path d="M16 8.049c0-4.446-3.582-8.05-8-8.05C3.58 0-.002 3.603-.002 8.05c0 4.017 2.926 7.347 6.75 7.951v-5.625h-2.03V8.05H6.75V6.275c0-2.017 1.195-3.131 3.022-3.131.876 0 1.791.157 1.791.157v1.98h-1.009c-.993 0-1.303.621-1.303 1.258v1.51h2.218l-.354 2.326H9.25V16c3.824-.604 6.75-3.934 6.75-7.951"/>
                </svg>
                Facebook
              </a>
            </div>
          </div>
        </div>

        <div class="mt-6 flex flex-wrap gap-3 sm:mt-8">
          <a
            href={whatsappLink}
            class="w-full rounded-full bg-[#2b2322] px-6 py-3 text-center text-[0.65rem] font-semibold uppercase tracking-[0.16em] text-[#f9f3ec] transition hover:bg-[#3a2f2d] focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[#2b2322] sm:w-auto sm:text-xs sm:tracking-[0.18em]"
          >
            Prenota su WhatsApp
          </a>
          <a
            href={mapsLink}
            class="w-full rounded-full border border-[#2b2322] px-6 py-3 text-center text-[0.65rem] font-semibold uppercase tracking-[0.16em] text-[#2b2322] transition hover:bg-[#2b2322] hover:text-[#f9f3ec] focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[#2b2322] sm:w-auto sm:text-xs sm:tracking-[0.18em]"
          >
            Apri su Maps
          </a>
        </div>
      </div>

      <div class="relative">
        <div class="absolute inset-0 -rotate-2 rounded-[2.4rem] border border-[#d9b5b0] bg-white/50"></div>
        <div class="relative overflow-hidden rounded-[2.4rem] border border-[#2b2322] bg-white shadow-[0_30px_90px_-55px_rgba(50,34,33,0.55)]">
          <iframe
            title="Mappa Eleganza"
            src="https://www.google.com/maps?q=Via%20Appia%20Nuova%20258%2C%20Roma&output=embed"
            class="h-72 w-full border-0 sm:h-80"
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            allowfullscreen
          ></iframe>
          <div class="border-t border-[#e1c7bf] bg-[#fff9f4] px-6 py-5">
            <p class="text-xs uppercase tracking-[0.22em] text-[#8c5c56]">Mappa</p>
            <p class="mt-2 text-sm text-[#4a3d3b]">Apri Google Maps per indicazioni stradali e parcheggio.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
